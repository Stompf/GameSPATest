
<div style="display: table; margin:0 auto;">
    <div style="display: table-row">
        <div style="display: table-cell">
            <img src="~/Images/lifecare_logo.png" style="width: 200px; height: auto;" />
        </div>
    </div>

    <div style="display: table-row;">
        <div style="display: table-cell;">
            <div style="position: relative">
                <img src="~/Images/Sjukhus.jpg" style="width: 100%; height: auto;" />

                <div data-bind="visible: $root.currentStep() === 0">
                   @Html.Partial("TietoEnkat_Step01")
                </div>

                <div data-bind="visible: $root.currentStep() === 1">
                    @Html.Partial("TietoEnkat_Step02")
                </div>

                <div data-bind="visible: $root.currentStep() === 2">
                    @Html.Partial("TietoEnkat_Step03")
                </div>

                <div data-bind="visible: $root.currentStep() === 3">
                    @Html.Partial("TietoEnkat_Step04")
                </div>

            </div>
        </div>
    </div>
</div>